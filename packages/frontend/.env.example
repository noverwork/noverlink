# Backend API URL (public - exposed to browser)
NEXT_PUBLIC_API_URL=http://localhost:3000

# OAuth callback base URL (should match your frontend URL)
NEXT_PUBLIC_APP_URL=http://localhost:4200

# Polar.sh Payment Configuration
# Get access token from https://polar.sh/dashboard/{org}/settings
POLAR_ACCESS_TOKEN=
# Options: sandbox, production (default: sandbox for local dev)
POLAR_SERVER=sandbox

# Product IDs from Polar Dashboard
NEXT_PUBLIC_POLAR_STARTER_PRODUCT_ID=
NEXT_PUBLIC_POLAR_PRO_PRODUCT_ID=
