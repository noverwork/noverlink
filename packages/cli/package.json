{
  "name": "@noverlink/cli",
  "version": "0.0.1",
  "private": true,
  "nx": {
    "targets": {
      "build": {
        "executor": "nx:run-commands",
        "outputs": ["{workspaceRoot}/target"],
        "options": {
          "command": "cargo build --package noverlink-cli --release",
          "cwd": "{projectRoot}/../.."
        },
        "configurations": {
          "development": {
            "command": "cargo build --package noverlink-cli"
          }
        }
      },
      "serve": {
        "executor": "nx:run-commands",
        "options": {
          "command": "cargo run --package noverlink-cli",
          "cwd": "{projectRoot}/../.."
        }
      },
      "test": {
        "executor": "nx:run-commands",
        "options": {
          "command": "cargo test --package noverlink-cli",
          "cwd": "{projectRoot}/../.."
        }
      },
      "lint": {
        "executor": "nx:run-commands",
        "options": {
          "command": "cargo clippy --package noverlink-cli --all-targets --all-features -- -D warnings",
          "cwd": "{projectRoot}/../.."
        }
      },
      "lint:fix": {
        "executor": "nx:run-commands",
        "options": {
          "command": "cargo clippy --package noverlink-cli --all-targets --all-features --fix --allow-dirty --allow-staged",
          "cwd": "{projectRoot}/../.."
        }
      },
      "clean": {
        "executor": "nx:run-commands",
        "options": {
          "command": "cargo clean --package noverlink-cli",
          "cwd": "{projectRoot}/../.."
        }
      }
    }
  }
}
