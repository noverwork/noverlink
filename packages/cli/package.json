{
  "name": "@noverlink/cli",
  "version": "0.0.1",
  "private": true,
  "nx": {
    "targets": {
      "build": {
        "executor": "nx:run-commands",
        "outputs": ["{workspaceRoot}/packages/cli/target"],
        "options": {
          "command": "cargo build --release",
          "cwd": "packages/cli"
        },
        "configurations": {
          "development": {
            "command": "cargo build"
          }
        }
      },
      "serve": {
        "executor": "nx:run-commands",
        "options": {
          "command": "cargo run",
          "cwd": "packages/cli"
        }
      },
      "test": {
        "executor": "nx:run-commands",
        "options": {
          "command": "cargo test",
          "cwd": "packages/cli"
        }
      },
      "lint": {
        "executor": "nx:run-commands",
        "options": {
          "command": "cargo clippy -- -D warnings",
          "cwd": "packages/cli"
        }
      },
      "clean": {
        "executor": "nx:run-commands",
        "options": {
          "command": "cargo clean",
          "cwd": "packages/cli"
        }
      }
    }
  }
}
